<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_bold"
            android:text="Umrani Tool Game Cheats"
            android:textColor="@color/text_color_description"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/constraintLayoutgl"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@color/background_color_50"
                android:elevation="10dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:id="@+id/imageViewgl"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_marginStart="4dp"
                    android:contentDescription="@string/icon"
                    android:src="@drawable/loadingimg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.134" />
                <TextView
                    android:fontFamily="@font/lato_bold"
                    android:id="@+id/gnametxtgl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Game loading . . ."
                    android:textColor="@color/text_color_header"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewgl"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:textColor="@color/text_color_header"
                    android:id="@+id/pgversiontxtgl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:text="VERSION : loading..."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewgl"
                    app:layout_constraintTop_toBottomOf="@+id/gnametxtgl" />
                <TextView
                    android:textColor="@color/text_color_header"
                    android:id="@+id/pgstatustxtgl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:text="STATUS : loading..."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewgl"
                    app:layout_constraintTop_toBottomOf="@+id/pgversiontxtgl" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/constraintLayoutind"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@color/background_color_50"
                android:elevation="10dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:id="@+id/imageViewind"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/loadingimg"
                    android:contentDescription="@string/icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.134" />
                <TextView
                    android:fontFamily="@font/lato_bold"
                    android:id="@+id/gnametxtind"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Game loading . . ."
                    android:textColor="@color/text_color_header"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewind"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:textColor="@color/text_color_header"
                    android:id="@+id/pgversiontxtind"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:text="VERSION : loading..."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewind"
                    app:layout_constraintTop_toBottomOf="@+id/gnametxtind" />
                <TextView
                    android:textColor="@color/text_color_header"
                    android:id="@+id/pgstatustxtind"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:text="STATUS : loading..."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewind"
                    app:layout_constraintTop_toBottomOf="@+id/pgversiontxtind" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/constraintLayout8bp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@color/background_color_50"
                android:elevation="10dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:id="@+id/imageView8bp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/loadingimg"
                    android:contentDescription="@string/icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.134" />
                <TextView
                    android:fontFamily="@font/lato_bold"
                    android:id="@+id/gnametxt8bp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Game loading  . . ."
                    android:textColor="@color/text_color_header"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView8bp"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:textColor="@color/text_color_header"
                    android:id="@+id/pgversiontxt8bp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:text="VERSION : loading..."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView8bp"
                    app:layout_constraintTop_toBottomOf="@+id/gnametxt8bp" />
                <TextView
                    android:textColor="@color/text_color_header"
                    android:id="@+id/pgstatustxt8bp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:text="STATUS : loading..."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView8bp"
                    app:layout_constraintTop_toBottomOf="@+id/pgversiontxt8bp" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_bold"
                android:text="ðŸ‘‡Update tool for more games hackðŸ‘‡"
                android:textColor="@color/text_color_description"
                android:textSize="16sp" />

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/updatecheck"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>