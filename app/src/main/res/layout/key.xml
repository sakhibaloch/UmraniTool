<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="3"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/keyic"
                android:orientation="horizontal">

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="Umrani Tool Key Genrator"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_header"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="how to get key , very simpale watch ads complate all tasks and get key and enjoy umrani tool burtual injector free. "
                    android:textAlignment="center"
                    android:textColor="@color/text_color_description"
                    android:textSize="20sp" />

            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/lato_black"
                android:text="WATCH ADD COMPLETE TASK 1"
                android:textColor="@color/text_color_header"
                android:textSize="14sp"
                app:backgroundTint="@color/background_color_50" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button

                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/lato_black"
                android:text="WATCH ADD COMPLETE TASK 2"
                android:textColor="@color/text_color_header"
                android:textSize="14sp"
                app:backgroundTint="@color/background_color_50"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button

                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/lato_black"
                android:text="WATCH ADD COMPLETE TASK 3"
                android:textColor="@color/text_color_header"
                android:textSize="14sp"
                app:backgroundTint="@color/background_color_50"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button

                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/lato_black"
                android:text="WATCH ADD COMPLETE TASK 4"
                android:textColor="@color/text_color_header"
                android:textSize="14sp"
                app:backgroundTint="@color/background_color_50"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button

                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/lato_black"
                android:text="WATCH ADD LAST TASK"
                android:textColor="@color/text_color_header"
                android:textSize="14sp"
                app:backgroundTint="@color/background_color_50"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="@font/lato_black"
                android:gravity="center"
                android:text="NO  INTERNET  LOADING  KEY..."
                android:textAlignment="center"
                android:textColor="@color/text_color_header"
                android:textSize="12sp" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/t6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/lato_black"
                android:text="CLICK AND COPY KEY"
                android:textColor="@color/text_color_header"
                android:textSize="15sp"
                app:backgroundTint="@color/background_color_50"
                tools:ignore="HardcodedText" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>